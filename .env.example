# Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=development

# API Configuration
NUXT_PUBLIC_API_BASE=http://localhost
NUXT_PUBLIC_API_URL=http://localhost/api

# Application Configuration
NUXT_PUBLIC_APP_NAME=Task Manager
NUXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NUXT_PUBLIC_ENABLE_ANALYTICS=false
NUXT_PUBLIC_ENABLE_DEBUG=true

# Security
NUXT_PUBLIC_CSRF_ENABLED=true

# Development Only
NUXT_PUBLIC_DEV_TOOLS=true
